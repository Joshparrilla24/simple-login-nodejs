extends layout

block content
  .container
      #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px;')
        .panel.panel-info
          .panel-heading
            .panel-title Sign In
          .panel-body(style='padding-top:30px')
            -if (message.length > 0)
              .alert.alert-danger.col-sm-12 #{message}
            form#loginform.form-horizontal(role='form', method='post', action='/login')
              .input-group(style='margin-bottom: 25px')
                span.input-group-addon
                  i.glyphicon.glyphicon-user
                input#login-username.form-control(type='text', name='user_name', value='', placeholder='username', required)
              .input-group(style='margin-bottom: 25px')
                span.input-group-addon
                  i.glyphicon.glyphicon-lock
                input#login-password.form-control(type='password', name='password', placeholder='password',required)
              .input-group
              .form-group(style='margin-top:10px')
                .col-sm-12.controls
                  button#btn-login.btn.btn-success(type='submit') Login  
              .form-group
                .col-md-12.control
                  div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
                    | Don't have an account!
                    a(href='/signup')
                      | Sign Up Here


