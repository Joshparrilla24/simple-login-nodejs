include header
.row
  .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
    .panel.panel-info
      .panel-heading
        h3.panel-title #{data[0].first_name} #{data[0].last_name}
      .panel-body
        .row
          .col-md-3.col-lg-3(align='center')
            img.img-circle.img-responsive(alt='User Pic', src='/images/avatar-300x300.png')
          .col-md-9.col-lg-9
            table.table.table-user-information
              tbody
                tr
                  td User Name:
                  td #{data[0].user_name}
                tr
                  td Mobile:
                  td #{data[0].mob_no}
include footer