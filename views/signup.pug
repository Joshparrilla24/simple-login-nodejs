html(lang='en')
  head
    meta(charset='UTF-8')
    title Sample Site
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-2.2.0.min.js')
  body
    #mainform.container.col-sm-12
      #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style=' margin-top:50px')
        .panel.panel-info
          .panel-heading
            .panel-title Sign Up
            div(style='float:right; font-size: 85%; position: relative; top:-10px')
              a#signinlink(href='/') Sign In
          .panel-body
            form.form-horizontal(role='form', method='post', action='/signup', onsubmit='return checkblank(this);')
                if (message.length > 0)
                  .alert.alert-success.col-sm-12 message
              #signupalert.alert.alert-danger(style='display:none')
                p Error:
                span
              .form-group
                label.col-md-3.control-label(for='first_name') First Name
                .col-md-9
                  input.form-control(type='text', name='first_name', placeholder='First Name')
              .form-group
                label.col-md-3.control-label(for='last_name') Last Name
                .col-md-9
                  input.form-control(type='text', name='last_name', placeholder='Last Name')
              .form-group
                label.col-md-3.control-label(for='mob_no') Mobile Number
                .col-md-9
                  input.form-control(type='number', name='mob_no', placeholder='Mobile Number')
              .form-group
                label.col-md-3.control-label(for='user_name') User Name
                .col-md-9
                  input.form-control(type='text', name='user_name', placeholder='User Name')
              .form-group
                label.col-md-3.control-label(for='password') Password
                .col-md-9
                  input.form-control(type='password', name='password', placeholder='Password')
              .form-group
                // Button
                .col-md-offset-3.col-md-9
                  button#btn-signup.btn.btn-info(type='submit')
                    i.icon-hand-right
                    |  &nbsp Sign Up
